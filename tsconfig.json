{
	"include": ["src/*.ts"],
	"exclude": ["node_modules/*", "docs/*"],
	"compilerOptions": {
		/* Language and Environment */
		"target": "es2020",

		/* Modules */
		"module": "es2020",
		"moduleResolution": "node",

		/* Emit */
		"outDir": "dist",

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,

		/* Completeness */
		"skipLibCheck": true,

		/* Import JSON */
		"resolveJsonModule": true
	}
}
